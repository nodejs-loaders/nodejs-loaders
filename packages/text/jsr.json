{
  "$schema": "https://jsr.io/schema/config-file.v1.json",
  "version": "1.1.0",
  "name": "@nodejs-loaders/text",
  "description": "Extend node to support plain-text files via customization hooks.",
  "exports": "./text.mjs",
  "publish": {
    "include": [
      "./*.mjs",
      "./*.d.mts",
      "./*.d.mts.map"
    ],
    "exclude": [
      "!./*.mjs",
      "!./*.d.mts",
      "!./*.d.mts.map",
      "./*.bench.mjs",
      "./*.test.mjs",
      "./*.spec.mjs",
      "./fixtures/**/*"
    ]
  }
}
