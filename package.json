{
  "version": "2.0.0",
  "name": "nodejs-loaders",
  "author": "Jacob Smith",
  "maintainers": ["Augustin Mauroy"],
  "license": "ISC",
  "type": "module",
  "keywords": [
    "customisation hooks",
    "loaders",
    "node.js",
    "plugin"
  ],
  "scripts": {
    "bench": "node --no-warnings ./test/run-benchs.mjs",
    "biome:format:fix": "biome format --fix ./",
    "biome:format": "biome format ./",
    "biome:lint:fix": "biome lint --fix ./",
    "biome:lint": "biome lint ./",
    "biome:ci": "biome ci ./",
    "pjson:check": "node --no-warnings --test ./test/pjson.test.mjs",
    "pre-commit": "node --run biome:lint:fix; node --run biome:format:fix",
    "test": "node --no-warnings --import='./test/snapshots.mjs' --experimental-test-snapshots --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=./coverage.lcov --test-reporter=spec --test-reporter-destination=stdout --experimental-test-module-mocks --test --test-coverage-include='packages/**/*.js' --test-coverage-exclude='**/*.spec.js' --test-coverage-exclude='**/*.test.js' './packages/*/*.spec.js' './packages/*/*.test.js'",
    "types:check": "tsc --noEmit",
    "types:generate": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodejs-loaders/nodejs-loaders.git"
  },
  "workspaces": ["./packages/*"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.0",
    "bench-node": "^0.5.2",
    "semver": "^7.7.1"
  },
  "optionalDependencies": {
    "typescript": "^5.7.2"
  }
}
