{
  "version": "2.0.0",
  "name": "nodejs-loaders",
  "author": "Jacob Smith",
  "maintainers": [
    "Augustin Mauroy"
  ],
  "license": "ISC",
  "keywords": [
    "customisation hooks",
    "loaders",
    "node.js",
    "plugin"
  ],
  "scripts": {
    "bench": "node --no-warnings ./test/run-benchs.mjs",
    "lint": "oxlint --config .oxlintrc.json",
    "lint:fix": "oxlint --config .oxlintrc.json --fix",
    "pjson:check": "node --no-warnings --test ./test/pjson.test.mjs",
    "pre-commit": "node --run lint:fix",
    "test": "node --no-warnings --import='./test/snapshots.mjs' --experimental-test-module-mocks --experimental-test-snapshots --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=./coverage.lcov --test-reporter=spec --test-reporter-destination=stdout --test-coverage-include='packages/**/*.mjs' --test-coverage-exclude='**/*.spec.mjs' --test-coverage-exclude='**/*.test.mjs' --test",
    "test:packages": "node --run test -- './packages/**/*.spec.mjs' './packages/**/*.test.mjs'",
    "types:check": "tsc --noEmit",
    "types:generate": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodejs-loaders/nodejs-loaders.git"
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@types/node": "^24.10.1",
    "bench-node": "^0.13.0",
    "oxlint": "^1.25.0",
    "type-fest": "^5.1.0"
  },
  "optionalDependencies": {
    "typescript": "^5.9.3"
  }
}
