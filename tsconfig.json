{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext"
  },
  "include": ["./packages/**/**.mjs"],
  "exclude": [
    "**/fixtures/**/*",
    "**/*/fixture.*",
    "**/*/*.config.*",
    "**/*/*.fixture.*",
    "**/*/*.spec.*",
    "**/*/*.test.*",
    "**/*/*.bench.*"
  ]
}
